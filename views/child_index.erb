
<div class="main-cont">

<h4>Recent Child Updates</h4>
 <div class="rating-selector">
    <a id="5stars" href="/tiers/5"> 5stars  </a>
    <a id="date" href="/sort/5/date"> 5date  </a>
    <a id="date" href="/sort/5/element"> element  </a>
    <a id="date" href="/sort/5/type"> type  </a>
    <a id="4stars" href="/tiers/4">  4stars  </a>
    <a id="date" href="/sort/4/date"> 4date  </a>
    <a id="3stars" href="/tiers/3">  3stars  </a>
  </div>
    <div class="unit-cont">
    <% @unit.each do |unit_details| %>
    <% unit = unit_details[1] %>
    <% rating = unit_details[4] + "stars" %>
        <div class="unit-grid-cols">

            <% if !session[:username]%>
            <div class="edit-remove-buttons">
              <a href="/childs/<%= rating %>/<%= unit %>/edit">Edit</a>|
              <a href="/childs/<%= rating %>/<%= unit %>/remove" onClick="return checkMe('<%= unit %>')">Remove</a>
            </div>
            <% end %>

              <a class="linkaddress" href="/childs/<%= rating %>/<%= unit %>">
                <img class="profile_imgs <%=unit_details[3] %>" src="<%= unit_details[5] %>" alt="<%= unit %>"/>
                </a>
            <div class="unit-type-cont">
                <%== format_stat("type", unit_details[2]) %>
                <%== format_stat("element", unit_details[3]) %>
            </div>
            <h6 class="unit-profile-title"><%= upcase_name(unit) %></h6>
        </div>
    <% end %>
    </div>
</div>
