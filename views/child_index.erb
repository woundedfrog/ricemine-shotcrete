
<div class="main-cont">
 <div class="rating-selector">
   <div class='rating-selector-groups' >
    <a id="5date" href="/sort/5/date" onClick='return checkUrl("5/date")'> 5date  </a>
    <a id="5element" href="/sort/5/element" onClick='return checkUrl("5/element")'> 5element  </a>
    <a id="5type" href="/sort/5/type" onClick='return checkUrl("5/type")'> 5type  </a>
    </div>
      <div class='rating-selector-groups' >
       <a id="4date" href="/sort/4/date" onClick='return checkUrl("4/date")'> 4date  </a>
       <a id="4element" href="/sort/4/element" onClick='return checkUrl("4/element")'> 4element  </a>
       <a id="4type" href="/sort/4/type" onClick='return checkUrl("4/type")'> 4type  </a>
       </div>
  </div>
  <% @sorted_by.each do |category| %>
  <h2 class='item'><%= upcase_name(category) %></h2>
    <div class="idx-unit-cont unit-cont">

    <% @unit.each do |unit_details| %>
    <% unit = unit_details[1] %>
    <% rating = unit_details[4] + "stars" %>
    <% if unit_details[3] == category || unit_details[2] == category || rating == category || unit_details[6] == category %>
        <div class="unit-grid-cols">
          <% if session[:username]%>
          <div class="edit-remove-buttons">
                <a href="/edit_unit/<%= upcase_name(unit) %>">Edit</a> |
                <a href="/unit_remove/<%= unit %>" onClick="return checkMe('<%= unit %>')">Remove</a>
          </div>
          <% end %>


              <a class="linkaddress" href="/childs/<%= rating %>/<%= unit %>">
                <% image = unit_details[5].gsub('/images/', '')%>
                <img class="profile_imgs <%=unit_details[5] %>" src="https://res.cloudinary.com/mnyiaa/image/upload/v1583811793/riceminejp/<%= image %>" alt="<%= unit %>"/>
              </a>
            <div class="unit-type-cont">
                <%== format_stat("type", unit_details[2]) %>
                <%== format_stat("element", unit_details[3]) %>
            </div>
            <h6 class="unit-profile-title"><%= upcase_name(unit) %></h6>
        </div>
    <% end %>
    <% end %>

    </div>
        <% end %>
</div>
