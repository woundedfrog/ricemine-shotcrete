
<div class="main-cont">
 <div class="rating-selector">
   <div class='rating-selector-groups' >
    <a id="5stars" href="/tiers/5" onClick='return checkUrl("5")'>  5stars  </a>
    <a id="4stars" href="/tiers/4" onClick='return checkUrl("4")'>  4stars  </a>
    <a id="3stars" href="/tiers/3" onClick='return checkUrl("3")'>  3stars  </a>
    </div>
      <div class='rating-selector-groups' >
       <a id="5stars" href="#" onclick="return showUnitsTier('WORLDBOSS')"> WorldBoss  </a>
      <a id="5stars" href="#" onclick="return showUnitsTier('RAID')"> Raid  </a>
       <a id="5stars" href="#" onclick="return showUnitsTier('PVP')"> PVP  </a>
      <a id="5stars" href="#" onclick="return showUnitsTier('PVE')"> PVE  </a>
      </div>
  </div>
  <% @sorted_by.each_with_index do |category, idx| %>
  <h2 class='item <%= category %> <%= hide_or_show(category) %>'><%= upcase_name(category) %></h2>
  <% @tiers.each do |tier| %>
  <% if check_if_any?(idx, tier, @unit) %>
  <h2 class='item <%= category %> <%= hide_or_show(category) %>'><%= tier %></h2>

    <div class="item idx-unit-cont unit-cont <%= category %> <%= hide_or_show(category) %>">
    <% @unit.each do |unit_details| %>
    <% unit = unit_details[1] %>
    <% rating = unit_details[4] + "stars" %>
    <% if unit_details[6].split(" ")[idx] == tier %>
        <div class="unit-grid-cols">
                      <% if !session[:username]%>
                      <div class="edit-remove-buttons">
                            <a href="/edit_unit/<%= upcase_name(unit) %>">Edit</a> |
                            <a href="/childs/<%= rating %>/<%= unit %>/remove" onClick="return checkMe('<%= unit %>')">Remove</a>
                    </div>
                      <% end %>

              <a class="linkaddress" href="/childs/<%= rating %>/<%= unit %>">
                <% image = unit_details[5].gsub('/images/', '')%>
                <img class="profile_imgs <%=unit_details[3] %>" src="https://res.cloudinary.com/mnyiaa/image/upload/v1583811793/riceminejp/<%= image %>" alt="<%= unit %>"/>

                </a>
            <div class="unit-type-cont">
                <%== format_stat("type", unit_details[2]) %>
                <%== format_stat("element", unit_details[3]) %>
            </div>
            <h6 class="unit-profile-title"><%= upcase_name(unit) %></h6>
        </div>
    <% end %> <!-- if loop -->
  <% end %> <!-- unit.each loop -->
 </div>
 <% end %>
<% end %> <!-- tiers.each end -->
<% end %> <!-- sortedby.each end -->
</div>
