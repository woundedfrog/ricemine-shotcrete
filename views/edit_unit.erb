<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>

<div class="container-fluid">

    <form action="/new_unit" method="post" enctype="multipart/form-data">
        <dl>
            <dt>
                <label for="current_unit_name">Unit name:</label>
            </dt>
            <dd>
                <input class="content" name="current_unit_name" placeholder="" type="text" value="<%= @new_profile['name'] || :unit_name %>" readonly="readonly">
                <input name="edited" type="checkbox" required> Check box to enable editing
            </dd>
            <dt>
                <label for="unit_name">Enter a unit name:</label>
            </dt>
            <dd>
                <input class="content" name="unit_name" placeholder="" type="text"  value="">
            </dd>
            <dd>
                Enable this unit?(Makes it visible)<input type="hidden" name="enabled" value="0"><input type="checkbox" onclick="$(this).prev().val(1 - $(this).prev().val())">
            </dd>
            <% @profile_pic_table.each do |col_name, col_value| %>
            <% next if col_name == 'unit_id' %>
            <% if col_name.include?('pic') %>
            <label for="upload"><em>upload a file or enter filename (from server)</em></label>
            <input type="file" name="file<%= col_name %>" value="upload">
            <input class="content pic-input-tag" name="<%= col_name %>" placeholder="file-name" type="text"  value="<%= col_value %>">
            <% else %>
            <%= col_name.capitalize %>
            <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= col_value %>">
            <% end %>
            <% end %>

            <% @new_profile.each do |col_name, col_value| %>
            <% next if col_name == 'name' %>

            <dt>
                <label for="<% col_name %>"><%= col_name.capitalize %> info:</label>
                <% if col_name == 'notes' %>
                <label for="tooltip">Tooltip skils <a class='tooltip' style="color: orange;">--- Hover me ---<span class='tooltiptext'>Units: $' ' |  SC: #' ' | Pics: ^' '</span></a></label>
                <% end  %>
            </dt>
            <dd>
                <% if col_name == "type" %>
                <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= col_value || '' %>"> Example: attacker, healer, tank, buffer, debuffer
                <% elsif col_name == "element" %>
                <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= col_value %>"> Example: water, fire, grass, light, dark
                <% elsif col_name == "stars" %>
                <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= col_value %>">
                <% elsif col_name == "id" %>
                <input class="content" name="<%= col_name %>2" placeholder="" type="text"  value="<%= col_value %>" readonly>
                <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= col_value %>" style="visibility: hidden;">
                <% elsif col_name == "created_on"  %>
                <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= col_value %>"> Can leave empty.
                <% else %>
                <textarea class="content" name="<%= col_name %>" rows="5" cols="50"><%= col_value %></textarea>
                <% end %>
            </dd>
            <% end %>
            <label for="skill_dump">QUICK: Dump skill info here</label>
            <textarea class="content" name="skill_dump" rows="5" cols="50"></textarea>
            <label for="tooltip">Tooltip skils <a class='tooltip' style="color: orange;">--- Hover me ---<span class='tooltiptext'>Follow the styling exactly. Else leave unmodified.</span></a></label>
            <textarea class="content" name="tooltip" rows="7" cols="50" placeholder="lifesteal: Absorbs 20% of the damage as HP."><%= @tooltip_dump %></textarea>
        </dl>
        <fieldset class="actions">
            <button type="submit" value="Save" onClick="return confirmMe('Save the data as-is')">Save</button>
            <a href="/">Cancel</a>
        </fieldset>
    </form>
</div>
