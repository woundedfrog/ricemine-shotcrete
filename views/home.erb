<div class="home-cont main-cont">

<h4 class="recent-update">Recent Child Updates</h4>

    <div class="unit-cont container">
    <% @unit.each do |unit_details| %>
    <% unit_n = unit_details['en_name'] %>
    <% rating = unit_details['stars'].to_s + "stars" %>
        <div class="unit-grid-cols">
                <a class="linkaddress" href="/childs/<%= rating %>/<%= unit_n %>">
                  <% next if unit_details['pics'].nil?; image = unit_details['pics'].gsub('/images/', '')%>
                  <img class="profile_imgs <%=unit_details['pics'] %>"  src="/images/portraits/<%= image %>.png" alt="<%= image %>.png"/>
                </a>
            <div class="unit-type-cont">
                <%== format_stat("type", unit_details['role']) %>
                <%== format_stat("element", unit_details['attribute']) %>
            </div>
            <h6 class="unit-profile-title"><%= upcase_name(unit_n) %></h6>
        </div>
    <% end %>
    </div>

<h4 class="recent-update">Recent Soul-Card Updates</h4>
    <div class="sc-cont container">
      <% @soulcards.each do |card| %>
      <div class="sc-grid-col">
            <a class="linkaddress" href="/soulcards/<%= card['grade'] %>/<%= card['en_name'] %>">
                <% image = card['image1'].gsub('/images/sc/', '').gsub(/[^a-z^\.]/i,'')%>
              <img class="sc_index_pic" src="<%= get_image_link(card['image1']) %>" alt="<%= image %>"/>
            </a>
          <h6 class="sc-index-title"><%= upcase_name(card['en_name']) %></h6>
      </div>
  <% end %>
  </div>
  </div>
