<script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>


<div class="container-fluid">

  <form action="/new_unit" method="post" enctype="multipart/form-data">
    <dl>
      <dt>
        <label for="unit_name">Enter a unit name:</label>
      </dt>
      <dd>
        <input class="content" name="unit_name" placeholder="" type="text"  value="<%= params[:unit_name] %>" required>
      </dd>
      <dd>
        Enable this unit?(Makes it visible)<input type="hidden" name="enabled" value="0"><input type="checkbox" onclick="$(this).prev().val(1 - $(this).prev().val())">
      </dd>
      <button type="button" class="mobile-button" id="pic-button2" onClick="return uploadImage('')">Upload an image</button>
      <p> Enter the name of the uploaded images in the boxes below.!</p>
        <% @profile_pic_table.each do |col_name| %>
          <% next if col_name == 'unit_id' %>
          <% if col_name.include?('pic') %>
            <label for="upload"><em>Enter filename (from server)</em></label>
            <!-- <input type="file" name="file<%= col_name %>" value="upload"> -->
            <input class="content pic-input-tag" name="<%= col_name %>" placeholder="file-name" type="text"  value="<%= params[col_name.to_sym] %>">
          <% else %>
            <%= col_name.capitalize %>
            <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= params[col_name.to_sym] %>">
          <% end %>
        <% end %>

      <% @new_profile.each do |col_name| %>
      <% next if col_name == 'name' %>

      <dt>
        <label for="<% col_name %>"><%= col_name.capitalize %> info:</label>
      </dt>
      <dd>
            <% if col_name == "type" %>
              <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= params[col_name.to_sym] || '' %>"> Example: attacker, healer, tank, buffer, debuffer
            <% elsif col_name == "element" %>
              <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= params[col_name.to_sym] %>"> Example: water, fire, earth, light, dark
            <% elsif col_name == "stars" %>
                <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="5">
            <% elsif col_name == "id" %>
              <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= @new_id %>" disabled>
              <% elsif col_name == "created_on"  %>
                <input class="content" name="<%= col_name %>" placeholder="" type="text"  value="<%= @new_id %>"> Can leave empty.
        <% else %>
          <textarea class="content" name="<%= col_name %>" rows="5" cols="50"></textarea>
        <% end %>
      </dd>
      <% end %>
      <label for="skill_dump">QUICK: Dump skill info here</label>
      <textarea class="content" name="skill_dump" rows="5" cols="50"></textarea>
      <label for="tooltip">Tooltip skils <a class='tooltip' style="color: orange;">--- Hover me ---<span class='tooltiptext'>Follow the styling exactly. Else leave unmodified.</span></a></label>
      <textarea class="content" name="tooltip" rows="7" cols="50" placeholder="lifesteal [Absorbs 20% of the damage as HP.]"></textarea>
    </dl>
    <fieldset class="actions">
      <button type="submit" value="Save" onClick="return confirmMe('Save the data as-is')">Save</button>
      <a href="/">Cancel</a>
    </fieldset>
  </form>
</div>
