
<% if session[:message] %>
  <p class="message"><%= session.delete(:message) %></p>
<% end %>

<form id="login" action="/users/signin" method="post">
  <div>
    <label for="username">Username:</label>
    <input name="username" id="username" value="<%= params[:username] %>"/>
  </div>
  <div>
    <label for="password">Password:</label>
    <input name="password" id="password"  name="password"/>
  </div>
  <button type="submit">Sign in</button>
</form>



<form id="login" action="/logout" method="post">
<button type="submit">Sign out</button>
</form>
