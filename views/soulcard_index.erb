<div class="main-cont">
  <div class="rating-selector">

        <div class="rating-selector-groups">
       <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Stars</a>
       <div class="dropdown-menu">
     <a id="5stars" href="/soulcards/5" onClick='return checkUrl("5")'>  5★  </a>
     <a id="4stars" href="/soulcards/4" onClick='return checkUrl("4")'>  4★  </a>
     <a id="3stars" href="/soulcards/3" onClick='return checkUrl("3")'>  3★  </a>
   </div>
 </div>
 </div>
<div class="idx-sc-cont sc-cont">
  <% @soulcards.each do |card| %>
  <div class="sc-grid-col">
        <a class="linkaddress" href="/soulcards/<%= card['grade'] %>/<%= card['en_name'] %>">
            <% image = card['image1'].gsub('/images/sc/', '').gsub(/[^a-z^\.^3^4^5]/i,'')%>
          <img class="sc_index_pic" src="<%= get_image_link(card['image1']) %>" alt="<%= image %>"/>
        </a>
      <h6 class="sc-index-title"><%= upcase_name(card['en_name']) %></h6>
  </div>
<% end %>
</div>
</div>
